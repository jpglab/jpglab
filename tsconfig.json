{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2022", "DOM"],
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@camera/*": ["src/camera/*"],
            "@core/*": ["src/core/*"],
            "@transport/*": ["src/transport/*"],
            "@constants/*": ["src/constants/*"],
            "@api/*": ["src/api/*"],
            "@factories/*": ["src/factories/*"]
        }
    },
    "include": ["src", "tests", "scripts", "examples", "*.config.ts"]
}